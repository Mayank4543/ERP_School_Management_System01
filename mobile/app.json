{
  "expo": {
    "name": "School ERP Mobile",
    "slug": "school-erp-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.schoolerp.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.schoolerp.mobile"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "scheme": "schoolerp",
    "plugins": [
      "expo-router",
      "expo-font"
    ]
  }
}
